{
  "name": "vue3-enterprise-boilerplate",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development vite",
    "build": "NODE_ENV=production run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test": "run-p type-check \"test:unit\" \"test:e2e\" --",
    "test:unit:ci": "vitest run --coverage.enabled --coverage.reporter='text-summary'",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:e2e": "playwright test",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "generate:component": "plop --plopfile ./_generators/component/component.js",
    "generate:view": "plop --plopfile ./_generators/view/view.js",
    "generate:layout": "plop --plopfile ./_generators/layout/layout.js",
    "generate:store": "plop --plopfile ./_generators/store/store.js",
    "generate:type": "plop --plopfile ./_generators/type/type.js",
    "generate:e2e": "plop --plopfile ./_generators/e2e/e2e.js"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "pinia": "^2.1.7",
    "vue": "^3.4.27",
    "vue-router": "^4.3.2"
  },
  "devDependencies": {
    "@pinia/testing": "^0.1.3",
    "@playwright/test": "^1.44.1",
    "@rushstack/eslint-patch": "^1.10.3",
    "@tsconfig/node18": "^18.2.4",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^18.19.33",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/coverage-v8": "^1.6.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.26.0",
    "jsdom": "^24.1.0",
    "msw": "^2.3.0",
    "npm-run-all2": "^6.2.0",
    "playwright-msw": "^3.0.1",
    "plop": "^4.0.1",
    "prettier": "^3.2.5",
    "sass": "^1.77.2",
    "typescript": "~5.4.5",
    "vite": "^5.2.12",
    "vitest": "^1.6.0",
    "vue-tsc": "^2.0.19"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
