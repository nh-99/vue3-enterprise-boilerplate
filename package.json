{
  "name": "vue3-enterprise-boilerplate",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development vite",
    "build": "NODE_ENV=production run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test": "run-p type-check \"test:unit\" \"test:e2e\" --",
    "test:ci": "run-p type-check \"test:unit --coverage.enabled --coverage.reporter='text-summary'\" \"test:e2e\" --",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "test:e2e": "playwright test",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "generate:component": "plop --plopfile ./_generators/component/component.js",
    "generate:view": "plop --plopfile ./_generators/view/view.js",
    "generate:layout": "plop --plopfile ./_generators/layout/layout.js",
    "generate:store": "plop --plopfile ./_generators/store/store.js",
    "generate:type": "plop --plopfile ./_generators/type/type.js",
    "generate:e2e": "plop --plopfile ./_generators/e2e/e2e.js"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "pinia": "^2.1.7",
    "vue": "^3.3.11",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@pinia/testing": "^0.1.3",
    "@playwright/test": "^1.40.1",
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node18": "^18.2.2",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^18.19.5",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vitest/coverage-v8": "^1.2.2",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "^0.5.0",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "jsdom": "^23.0.1",
    "msw": "^2.1.5",
    "npm-run-all2": "^6.1.1",
    "plop": "^4.0.1",
    "prettier": "^3.0.3",
    "sass": "^1.70.0",
    "typescript": "~5.3.0",
    "vite": "^5.0.10",
    "vitest": "^1.0.4",
    "vue-tsc": "^1.8.25"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
